<h1 class='text-center mt-2'>Bem-vindo!</h1>

<div class='container mt-3 d-flex justify-content-center'>
	<div
		id='homePageCarousel'
		class='carousel slide flex-wrap'
		data-bs-ride='carousel'
		style='width: 90vh;'
	>
		<div class='carousel-indicators'>
			<button
				type='button'
				data-bs-target='#homePageCarousel'
				data-bs-slide-to='0'
				class='active'
				aria-current='true'
				aria-label='Slide 1'
			></button>

			<button
				type='button'
				data-bs-target='#homePageCarousel'
				data-bs-slide-to='1'
				aria-label='Slide 2'
			></button>

			<button
				type='button'
				data-bs-target='#homePageCarousel'
				data-bs-slide-to='2'
				aria-label='Slide 3'
			></button>

		</div>

		<div class='carousel-inner rounded shadow'>

			<div class='carousel-item active'>
				<img
					src='/img/estoque.png'
					class='d-block w-100'
					alt='estoque'
				/>
				<a href='/admin/prodServ/estoque/produtos'>
					<div class='carousel-caption card-body'>
						<h5 class='text-shadow'>Estoque</h5>
						<hr />
						<p class='text-shadow'>Gerencie seus produtos e serviços</p>
					</div>
				</a>
			</div>

			<div class='carousel-item'>
				<img src='/img/venda.png' class='d-block w-100' alt='vendas' />
				<a href='/orcamento'>
					<div class='carousel-caption'>
						<h5 class='text-shadow'>Vendas</h5>
						<hr />
						<p class='text-shadow'>Administre seus orçamentos</p>
					</div>
				</a>
			</div>

			<div class='carousel-item'>
				<img
					src='/img/relatorios.png'
					class='d-block w-100'
					alt='relatorios'
				/>
				<a href='/admin/dashboard'>
					<div class='carousel-caption'>
						<h5 class='text-shadow'>Relatórios e previsões</h5>
						<hr />
						<p class='text-shadow'>Acompanhe a evolução de seu
							negócio</p>
					</div>
				</a>
			</div>

		</div>

		<button
			class='carousel-control-prev'
			type='button'
			data-bs-target='#homePageCarousel'
			data-bs-slide='prev'
		>
			<span class='carousel-control-prev-icon' aria-hidden='true'></span>
			<span class='visually-hidden'>Previous</span>
		</button>

		<button
			class='carousel-control-next'
			type='button'
			data-bs-target='#homePageCarousel'
			data-bs-slide='next'
		>
			<span class='carousel-control-next-icon' aria-hidden='true'></span>
			<span class='visually-hidden'>Next</span>
		</button>

	</div>
</div>

<div class='container mt-5'>
	<div class='d-flex justify-content-center flex-wrap'>
		<a href='/admin/prodServ/novoProduto'>
			<div class='card homepage-card-link'>
				<h4 class='card-header'>
					<i class='fas fa-plus' style='font-size:15px;'></i>
					Produto</h4>
				<div class='card-body text-center fs-1'>
					<i class='fas fa-dolly-flatbed'></i>
				</div>
			</div>
		</a>

		<a href='/admin/prodServ/novoServico'>
			<div class='card homepage-card-link'>
				<h4 class='card-header'>
					<i class='fas fa-plus' style='font-size:15px;'></i>
					Serviço</h4>
				<div class='card-body text-center fs-1'>
					<i class='fas fa-wrench'></i>
				</div>
			</div>
		</a>

		<a class='' href='/admin/prodServ/novaCategoria'>
			<div class='card homepage-card-link'>
				<h4 class='card-header'>
					<i class='fas fa-plus' style='font-size:15px;'></i>
					Categoria</h4>
				<div class='card-body text-center fs-1'>
					<i class='fas fa-tag'></i>
				</div>
			</div>
		</a>

		<a href='/cadastroGeral/cliente'>
			<div class='card homepage-card-link'>
				<h4 class='card-header'>
					<i class='fas fa-plus' style='font-size:15px;'></i>
					Cliente</h4>
				<div class='card-body text-center fs-1'>
					<i class='fas fa-user'></i>
				</div>
			</div>
		</a>

	</div>
</div>