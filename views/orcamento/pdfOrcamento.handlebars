<div id='pdfDocument' class='container'>
	<header>
		<div class='d-flex align-items-center justify-content-between'>
			<img
				src='/img/autodiesel.jpeg'
				alt='autodiesel'
				style='width: 200px;'
			/>

			<div>
				<table class='table-sm'>
					<tr>
						<td>Aenean ornare convallis</td>
						<td>Vestibulum iaculis urna orci, at interdum</td>
						<td>08.420.521/0001-00</td>
					</tr>
					<tr>
						<td>(87) 3030-6060</td>
						<td>vestibulum@feugiat.com </td>
					</tr>
				</table>
				<h1 class='text-end'>Ordem de serviço Nº
					{{orcamento.numero}}</h1>
			</div>
		</div>

		<table class='table'>
			<tr>
				<th>Responsável: </th>
				<td>{{usuario.nome}}</td>
				<td></td>
				<td></td>
			</tr>
			<tr>
				<tr>
					<th>Cliente: </th>
					<td>{{cliente.nome}}</td>
					<th>Data de entrada: </th>
					<td>{{getDia orcamento.data.dataEntrada}}/{{getMes
							orcamento.data.dataEntrada
						}}/{{getAno orcamento.data.dataEntrada}}</td>
				</tr>
				<tr>
					<th>Endereco: </th>
					<td>{{cliente.endereco}}</td>
					<th>Data de saída: </th>
					<td>{{getDia orcamento.data.dataSaida}}/{{getMes
							orcamento.data.dataSaida
						}}/{{getAno orcamento.data.dataSaida}}</td>
				</tr>
			</tr>
		</table>
	</header>

	<main>
		<h2 class='mt-5'>Produtos</h2>
		<table id='produtos' class='table table-sm table-bordered mt-2'>

			<thead class='table-dark'>
				<tr>
					<th>Produto</th>
					<th>Valor unit.</th>
					<th>Qtde</th>
					<th>Valor total</th>
				</tr>
			</thead>
			{{#if orcamento.produtos}}
				<tbody>
					{{#each orcamento.produtos}}
						<tr>
							<td>{{this.descricao}}</td>
							<td class='text-end'>{{this.valorUnit}}</td>
							<td class='text-end'>{{this.quantidate}}</td>
							<td class='text-end'>R$
								{{calculoVT
									this.valorUnit
									this.quantidade
								}}</td>
						</tr>
					{{/each}}
				</tbody>
				<tfoot class='table-secondary'>
					<tr>
						<th></th>
						<th></th>
						<th class='text-end'>Total geral</th>
						<th class='text-end'>R$ {{orcamento.valorTotal}}</th>
					</tr>
				</tfoot>
			{{else}}
				<tr>
					<td>- - -</td>
					<td>- - -</td>
				</tr>
			{{/if}}
		</table>

		<h2 class='mt-5'>Serviços</h2>
		<table id='servicos' class='table table-sm table-bordered mt-2'>
			<thead class='table-dark'>
				<tr>
					<th>Descrição</th>
					<th>Funcionário</th>
					<th>Valor</th>
				</tr>
			</thead>

			<tbody>
				{{#if orcamento.servicos}}
					{{#each orcamento.servicos}}
						<tr>
							<td>{{this.descricao}}</td>
							<td>{{this.nomeFunc}}</td>
							<td class='text-end'>R$ {{this.preco}}</td>
						</tr>
					{{/each}}
					<tfoot class='table-secondary'>
						<tr>
							<th></th>
							<th class='text-end'>Total geral</th>
							<th class='text-end'>R$
								{{orcamento.valorTotal}}</th>
						</tr>
					</tfoot>
				{{else}}
					<tr>
						<td>- - -</td>
						<td>- - -</td>
					</tr>
				{{/if}}
			</tbody>
		</table>
	</main>

	<footer class='text-center mt-5'>

		<div class='d-flex align-items-center justify-content-between'>
			<div>
				<p>_____________________________________________</p>
				<p>Assinatura do responsável</p>
			</div>
			<div>
				<p>_____________________________________________</p>
				<p>Assinatura do cliente</p>
			</div>
		</div>
		<div>
			<a class='btn btn-secondary' href='/orcamento'>
				<i class='fas fa-long-arrow-alt-left me-1'></i>
				Voltar
			</a>
			<a
				class='btn btn-light border-danger'
				href='javascript:window.print()'
			>
				<i class='fas fa-file-pdf fs-4 text-danger'></i>
				Imprimir
			</a>

		</div>
	</footer>
</div>

{{!-- prettier-ignore --}}