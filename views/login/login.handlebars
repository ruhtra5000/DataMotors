<form action='/usuario/login' method='post' class='container mt-4'>
	<div class='card center Wrem-30' id='formLogin'>
		<div class='card-body'>
			<h1>Login</h1>
			<input
				class='form-control mt-2'
				type='text'
				name='username'
				placeholder='E-mail'
			/>
			<input
				class='form-control mt-2'
				type='password'
				name='password'
				placeholder='Senha'
			/>
			<button class='btn btn-success mt-2' type='submit'>Fazer login</button>
			<p class='form-text m-0 mt-2'>Ainda não é cadastrado? Cadastre-se
				<a href='/usuario/registro'>aqui</a>.
			</p>
		</div>
	</div>

</form>