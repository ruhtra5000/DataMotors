<div class='container '>
	<header class='text-center'>
		<h1 >Clientes</h1>

		<div>
			<a href='/cadastroGeral/cliente'>
				<button class='btn btn-primary'>
					<i class='fas fa-user-plus'></i>
					Adicionar
				</button>
			</a>
		</div>
	</header>

	<main class='card mt-3 shadow'>
		<div class='card-body scrollable'>
			<table class='table table-striped table-hover align-middle'>
				<thead>
					<tr>
						<th>Nome</th>
						<th>CPF/CNPJ</th>
						<th>Endereco</th>
						<th>Telefone</th>
						<th>E-mail</th>
						<th>Ações</th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					{{#each clientes}}
						<tr>
							<td class='col-3'>{{nome}}</td>
							<td class='col-2'>{{cpf}}</td>
							<td class='col-3'>{{endereco}}</td>
							<td class='col-2'>{{contato.telefone}}</td>
							<td class='col-2'>{{contato.email}}</td>
							<td class='col-1'>
								<form
									action='/admin/clientes/editar'
									method='post'
								>
									<input
										type='hidden'
										name='id'
										value='{{_id}}'
									/>
									<button
										type='submit'
										class='btn btn-primary me-3'
									>
										<img src='/img/edit.svg' alt='edit' />
									</button>
								</form>
							</td>
							<td class='col'>
								<form
									action='/admin/clientes/deletar'
									method='post'
								>
									<input
										type='hidden'
										name='id'
										value='{{_id}}'
									/>
									<button
										type='submit'
										class='btn btn-danger'
									>
										<img
											src='/img/delete.svg'
											alt='delete'
										/>
									</button>
								</form>
							</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</main>