<div class='container mt-4'>
	<h1>Página de cadastros</h1>
	<nav style="--bs-breadcrumb-divider: '>';" aria-label='breadcrumb'>
		<ol class='breadcrumb'>
			<li class='breadcrumb-item'><a href='/'>Home</a></li>
			<li class='breadcrumb-item active' aria-current='page'>
				Cadastros
			</li>
		</ol>
	</nav>

	<div class='d-flex'>
		<!--Cliente-->
		<form
			action='/cadastroGeral/cliente'
			method='post'
			class='form-card center Wrem-30'
		>

			<h3>Cliente</h3>

			<div class='form-floating'>
				<input
					class='form-control'
					type='text'
					name='nome'
					id='nome'
					placeholder='Nome completo'
					required
				/>
				<label for='nome'>Nome</label>
			</div>

			<div class='form-floating'>
				<input
					class='form-control'
					type='text'
					name='cpf'
					minlength='11'
					max='14'
					id='cpfCliente'
					placeholder='CPF/CNPJ'
					required
				/>
				<label for='cpfCliente'>CPF/CNPJ</label>
			</div>

			<div class='input-group'>
				<span class='input-group-text'>
					Data de nascimento
				</span>
				<input
					class='form-control'
					type='number'
					name='dia'
					placeholder='dd'
					min='1'
					max='31'
					required
				/>
				<input
					class='form-control'
					type='number'
					name='mes'
					placeholder='mm'
					min='1'
					max='12'
					required
				/>
				<input
					class='form-control'
					type='number'
					name='ano'
					placeholder='yyyy'
					min='1930'
					max='2021'
					required
				/></div>

			<div class='form-floating'>
				<input
					class='form-control'
					type='text'
					name='endereco'
					id='endereco'
					placeholder='Endereço'
					required
				/>
				<label for='endereco'>Endereço</label>
			</div>

			<div class='form-floating'>
				<input
					class='form-control'
					type='email'
					name='email'
					id='email'
					placeholder='E-mail'
				/>
				<label for='email'>E-mail</label>
			</div>

			<div class='form-floating'>
				<input
					class='form-control'
					type='tel'
					name='telefone'
					id='telefone'
					placeholder='Telefone'
				/>
				<label for='telefone'>Telefone</label>
			</div>

			<button class='btn btn-success col-12' type='submit'>
				Cadastrar
			</button>
		</form>

		<!--Funcionário-->
		<form
			action='/cadastroGeral/funcionario'
			method='post'
			class='form-card center Wrem-30'
		>
			<h3 clas='form-title'>
				Funcionário
			</h3>

			<div class='form-floating'>
				<input
					class='form-control'
					type='text'
					name='nome'
					id='nome'
					placeholder='Nome completo'
					required
				/>
				<label for='nome'>Nome</label>
			</div>

			<div class='form-floating'>
				<input
					class='form-control'
					type='text'
					name='cpf'
					id='cpfFuncionario'
					placeholder='CPF'
					required
				/>
				<label for='cpfFuncionario'>CPF</label>
			</div>

			<div class='input-group'>
				<span class='input-group-text'>
					Data de nascimento
				</span>
				<input
					class='form-control'
					type='number'
					name='dia'
					placeholder='dd'
					min='1'
					max='31'
					required
				/>
				<input
					class='form-control'
					type='number'
					name='mes'
					placeholder='mm'
					min='1'
					max='12'
					required
				/>
				<input
					class='form-control'
					type='number'
					name='ano'
					placeholder='yyyy'
					min='1930'
					max='2021'
					required
				/>
			</div>

			<div class='form-floating'>
				<input
					class='form-control'
					type='email'
					name='email'
					id='email'
					placeholder='E-mail'
				/>
				<label for='email'>E-mail</label>
			</div>

			<div class='form-floating'>
				<input
					class='form-control'
					type='tel'
					name='telefone'
					id='telefone'
					placeholder='Telefone'
				/>
				<label for='telefone'>Telefone</label>
			</div>

			<button
				class='btn btn-success col-12'
				type='submit '
			>Cadastrar</button>
		</form>
	</div>

</div>

<script>
	$(document).ready(() => { $('#cpfFuncionario').mask('000.000.000-00') })
	$(document).ready(() => { $('#cpfCliente').mask('000.000.000-00') })
	//$(document).ready(() => { $('#cpfCliente').mask('00.000.000.0000-00') })
</script>